{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "paths": {
      // 根据别名配置相关路径
      "@/*": ["./src/*"],
      "~api/*": ["./src/api/modules/*"]
    }
  },
  "include": [
    "mainApp/src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.ts",
    "mainApp/src/**/*.d.ts",
    "mainApp/src/**/*.tsx",
    "mainApp/src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json"}]
}
